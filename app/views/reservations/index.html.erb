<div class="reservations index">
  <h2>Reservations</h2>

<%#= link_to("Add New Subject", {:action => 'new'}, :class => 'action new') %>
	<div class="table-responsive">
	  <table class="table table-striped table-hover" summary="Clients list">
		<tr>
	      <th>ID</th>
	      <th>Client Name</th>
	      <th>Hotel</th>
	      <th>Room Type</th>
	      <th>Arrival Date</th>
	      <th>Departure Date</th>
	      <th>Actions</th>
	    </tr>
	    <% @reservations.each do |r| %>
	    <% client = Client.find(r.client_id) %>
	    <tr>
	      <td><%= r.id %></td>
	      <td><%= "#{client.first_name} #{client.last_name}" %></td>
	      <td><%= r.hotel.name %>
	      <td><%= r.room.room_type%></td>
	      <td><%= r.arrival_date %></td>
	      <td><%= r.departure_date %></td>
	      <td class="actions">
	        <%= link_to("Show More", client_reservation_path(client.id,r.id), :class => 'btn btn-default btn-sm') %>
	        <%= link_to("Edit", edit_client_reservation_path(client.id,r.id), :class => 'btn btn-default btn-sm') %>
	        <%= link_to("Delete", client_reservation_path(client.id,r.id), method: 'DELETE', data: { confirm: "Are you sure?" },  :class => 'btn btn-danger btn-sm') %>
	      </td>
	    </tr>
	    <% end %>
	  </table>
	</div>	
	<div class = "btn-group ">
		<%#= link_to"Add a new Reservation", new_client_reservation_path(@client.id), :class => "btn btn-primary"%>
	</div>
	
</div>