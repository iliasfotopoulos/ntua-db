<div class="span8">
    <% if @rooms.any? %>
	    <h3>Rooms that meet your criteria: (<%= @rooms.count %>)</h3>
		<div class="table-responsive">
		  <table class="table table-striped table-hover" summary="Rooms list">
		    <tr>
		      <th>ID</th>
		      <th>Type</th>
		      <th>Price</th>
		    </tr>
		    <% @rooms.each do |r| %>
		    <tr>
		      <td><%= r.id %></td>
		      <td><%= r.room_type %></td>
		      <td ><%= r.price %></td>
		    </tr>
		    <% end %>
		  </table>
		</div>
	<% end %>	
	<div class = "btn-group ">
		<%#= link_to"Add a new room", new_hotel_room_path(@hotel.id), :class => "btn btn-primary"%>
	</div>

<div id="debug">
	<hr>
	<h4>Debug</h4>
	<%= params.inspect %><br/>
	<%= @room.inspect  %> </div>