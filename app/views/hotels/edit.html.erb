<div class= "Edit hotel">
	<h2>Edit hotel data</h2>

	<div class="">
    <%= bootstrap_form_for(@hotel) do |f| %>

      <%= f.text_field :name %>

      <%= f.text_field :city %>

      <%= f.text_field :street %>

      <%= f.number_field :street_number %>

      <%= f.text_field :zip_code %>

      <%= f.number_field :rating %>

      <%= f.number_field :construction_year %>

      <%= f.number_field :renovation_year %>

      <%= f.submit "Edit hotel", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>

</div>