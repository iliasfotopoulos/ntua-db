<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="hotel show">
  <h2>Show Hotel</h2>
  	<div class="table-responsive">
	  <table class = "table table-striped table-hover "summary="Hotel details view">
	    <tr>
	      <th>Name</th>
	      <td><%= @hotel.name %></td>
	    </tr>
	    <tr>
	      <th>City</th>
	      <td><%= @hotel.city %></td>
	    </tr>
	    <tr>
	      <th>Street</th>
	      <td><%= @hotel.street %></td>
	    </tr>
	    <tr>
	      <th>Street Number</th>
	      <td><%= @hotel.street_number %></td>
	    </tr>
	    <tr>
	      <th>Zip Code</th>
	      <td><%= @hotel.zip_code %></td>
	    </tr>
	    <tr>
	      <th>Rating</th>
	      <td><%= @hotel.rating %></td>
	    </tr>
	    <tr>
	      <th>Construction Year</th>
	      <td><%= @hotel.construction_year %></td>
	    </tr>
	    <tr>
	      <th>Renovation Year</th>
	      <td <%= !@hotel.renovation_year ? "class = danger" : ""%> ><%= @hotel.renovation_year ? @hotel.renovation_year : "No renovation" %></td>
	    </tr>
	    <tr>
	      <th>Created</th>
	      <td><%= @hotel.created_at %></td>
	    </tr>
	    <tr>
	      <th>Updated</th>
	      <td><%= @hotel.updated_at %></td>
	    </tr>
	  </table>
	</div>
</div>

<div class="span8">
    <% if @hotel.rooms.any? %>
	    <h3>Rooms (<%= @hotel.rooms.count %>)</h3>
		<div class="table-responsive">
		  <table class="table table-striped table-hover" summary="Rooms list">
		    <tr>
		      <th>ID</th>
		      <th>Type</th>
		      <th>Price</th>
		      <th>Actions</th>
		    </tr>
		    <% @rooms.each do |r| %>
		    <tr>
		      <td><%= r.id %></td>
		      <td><%= r.room_type %></td>
		      <td ><%= r.price %></td>
		      <td class="actions">
		        <%#= link_to("Show More", hotel_path(h.id), :class => 'btn btn-default btn-sm') %>
		        <%= link_to("Edit", edit_hotel_room_path(@hotel.id,r.id), :class => 'btn btn-default btn-sm') %>
		        <%= link_to("Delete", hotel_room_path(@hotel.id,r.id), method: 'DELETE', data: { confirm: "Are you sure?" },  :class => 'btn btn-default btn-sm') %>
		      </td>
		    </tr>
		    <% end %>
		  </table>
		</div>
	<% end %>	
	<div class = "btn-group ">
		<%= link_to"Add a new room", new_hotel_room_path(@hotel.id), :class => "btn btn-primary"%>
	</div>
</div>