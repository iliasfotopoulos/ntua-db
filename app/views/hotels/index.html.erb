<div class="hotels index">
  <h2>Hotels</h2>

<%#= link_to("Add New Subject", {:action => 'new'}, :class => 'action new') %>
	<div class="table-responsive">
	  <table class="table table-striped table-hover" summary="Hotels list">
	    <tr>
	      <th>ID</th>
	      <th>Name</th>
	      <th>City</th>
	      <th>Street</th>
	      <th>Street Number</th>
	      <th>Zip Code</th>
	      <th>Rating</th>
	      <th>Construction Year</th>
	      <th>Renovation Year</th>
	      <th>Actions</th>
	    </tr>
	    <% @hotels.each do |h| %>
	    <tr>
	      <td><%= h.id %></td>
	      <td><%= h.name %></td>
	      <td ><%= h.city %></td>
	      <td ><%= h.street %></td>
	      <td ><%= h.street_number %></td>
	      <td ><%= h.zip_code %></td>
	      <td ><%= h.rating %></td>
	      <td ><%= h.construction_year %></td>
	      <td ><%= h.renovation_year %></td>
	      <td class="actions">
	        <%= link_to("Show More", hotel_path(h.id), :class => 'btn btn-default btn-sm') %>
	        <%= link_to("Edit", edit_hotel_path(h.id), :class => 'btn btn-default btn-sm') %>
	        <%#= link_to("Delete", {:action => 'delete', :id => h.id}, :class => 'btn btn-default btn-sm') %>
	      </td>
	    </tr>
	    <% end %>
	  </table>
	</div>
	<div class = "btn-group ">
		<%= link_to"Add a new hotel", new_hotel_path, :class => "btn btn-primary"%>
	</div>
	
</div>