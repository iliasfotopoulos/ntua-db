<h1> Various Reports </h1>
<div class ="row">
		<div class="table-responsive col-md-4">
			<h4>Reservations Per Hotel</h4>
			  <table class="table table-striped table-hover" summary="Reservations per Hotel">
			    <tr>
			      <th>Hotel</th>
			      <th>Count</th>
			    </tr>
			    <% @hotel_reservations.each do |h| %>
			    <tr>
			      <td><%= h.name %></td>
			      <td><%= h.count %></td>
			    </tr>
			    <% end %>
			  </table>
		</div>

		<div class="table-responsive col-md-4">
			<h4>Reservations Per Room Type</h4>
			  <table class="table table-striped table-hover" summary="Reservations Per Room id">
			    <tr>
			      <th>Room id</th>
			      <th>Count</th>
			    </tr>
			    <% @room_type_reservations.each do |r| %>
			    <tr>
			      <td><%= r.room_type %></td>
			      <td><%= r.count %></td>
			    </tr>
			    <% end %>
			  </table>
		</div>

		<div class="table-responsive col-md-4">
			<h4>Hotels that have more than 5 Rooms</h4>
			  <table class="table table-striped table-hover" summary="Reservations Per Room id">
			    <tr>
			      <th>Hotel Name</th>
			      <th>Count</th>
			    </tr>
			    <% @hotel_rooms_having.each do |r| %>
			    <tr>
			      <td><%= r.name %></td>
			      <td><%= r.count %></td>
			    </tr>
			    <% end %>
			  </table>
		</div>
</div>

