<div class="clients index">
  <h2>Clients</h2>

<%#= link_to("Add New Subject", {:action => 'new'}, :class => 'action new') %>
	<div class="table-responsive">
	  <table class="table table-striped table-hover" summary="Clients list">
	    <tr>
	      <th>ID</th>
	      <th>Identity</th>
	      <th>Name</th>
	      <th>City</th>
	      <th>Credit Card Number</th>
	      <th>Actions</th>
	    </tr>
	    <% @clients.each do |c| %>
	    <tr>
	      <td><%= c.id %></td>
	      <td><%= c.identity %></td>
	      <td><%= "#{c.first_name} #{c.last_name}"  %></td>
	      <td ><%= c.city %></td>
	      <td ><%= c.credit_card_number %></td>
	      <td class="actions">
	        <%= link_to("Show More", client_path(c.id), :class => 'btn btn-default btn-sm') %>
	        <%= link_to("Edit", edit_client_path(c.id), :class => 'btn btn-default btn-sm') %>
	        <%= link_to("Delete", client_path(c.id), method: 'DELETE', data: { confirm: "Are you sure?" },  :class => 'btn btn-default btn-sm') %>
	      </td>
	    </tr>
	    <% end %>
	  </table>
	</div>
	<div class = "btn-group ">
		<%= link_to"Add a new client", new_client_path, :class => "btn btn-primary"%>
	</div>
	
</div>