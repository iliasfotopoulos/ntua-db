<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="Client show">
  <h2>Show client</h2>
  	<div class="table-responsive">
	  <table class = "table table-striped table-hover "summary="client details view">
	    <tr>
	      <th>Identity</th>
	      <td><%= @client.identity %></td>
	    </tr>
	    <tr>
	      <th>First name</th>
	      <td><%= @client.first_name %></td>
	    </tr>
	    <tr>
	      <th>Last name</th>
	      <td><%= @client.last_name %></td>
	    </tr>
	    <tr>
	      <th>City</th>
	      <td><%= @client.city %></td>
	    </tr>
	    <tr>
	      <th>Street</th>
	      <td><%= @client.street %></td>
	    </tr>
	    <tr>
	      <th>Street Number</th>
	      <td><%= @client.street_number %></td>
	    </tr>
	    <tr>
	      <th>Zip Code</th>
	      <td><%= @client.zip_code %></td>
	    </tr>
	    <tr>
	      <th>Created</th>
	      <td><%= @client.created_at %></td>
	    </tr>
	    <tr>
	      <th>Updated</th>
	      <td><%= @client.updated_at %></td>
	    </tr>
	  </table>
	</div>

	<div class="span8">
    <% if @reservations.any? %>
	    <h3>Reservations (<%= @reservations.count %>)</h3>
		<div class="table-responsive">
		  <table class="table table-striped table-hover" summary="Rooms list">
		    <tr>
		      <th>ID</th>
		      <th>Hotel</th>
		      <th>Room Type</th>
		      <th>Arrival Date</th>
		      <th>Departure Date</th>
		      <th>Actions</th>
		    </tr>
		    <% @reservations.each do |r| %>
		    <tr>
		      <td><%= r.id %></td>
		      <td><%= (Hotel.find(r.hotel_id)).name %>
		      <td><%= (Room.find(r.room_id)).room_type%></td>
		      <td><%= r.arrival_date %></td>
		      <td><%= r.departure_date %></td>
		      <td class="actions">
		        <%= link_to("Show More", client_reservation_path(@client.id,r.id), :class => 'btn btn-default btn-sm') %>
		        <%= link_to("Edit", edit_client_reservation_path(@client.id,r.id), :class => 'btn btn-default btn-sm') %>
		        <%= link_to("Delete", client_reservation_path(@client.id,r.id), method: 'DELETE', data: { confirm: "Are you sure?" },  :class => 'btn btn-default btn-sm') %>
		      </td>
		    </tr>
		    <% end %>
		  </table>
		</div>
	<% end %>	
	<div class = "btn-group ">
		<%= link_to"Add a new Reservation", new_client_reservation_path(@client.id), :class => "btn btn-primary"%>
	</div>
</div>